import javax.swing.*;

public class Main
{
    public static void main(String[] args)
    {
        int number = Integer.parseInt(JOptionPane.showInputDialog("How many units of electricity did you use this week?"));

        if (number <= 100)
        {
            System.out.println("You'll have to pay $1 per unit!");
        } else if (number >= 101  && number <= 200) {
            System.out.println("You'll have to pay $1.5 per unit!");
        } else if (number >= 201  && number <= 300) {
            System.out.println("You'll have to pay $2 per unit!");
        } else if (number > 300) {
            System.out.println("You'll have to pay $3 per unit!");
        }
    }
}
